# ZSH/Shell
alias zshrc="open ~/.zshrc"
alias refresh="source ~/.zshrc"
alias omz="open ~/.oh-my-zsh"
alias cd="z"
alias cdi="zi"
alias e="exa -G --icons --group-directories-first"
alias el="exa -l --icons --header --group-directories-first"
alias rm="trash"

# Brew
alias brews="brew list -1"
alias brewup="brew update; brew upgrade; brew prune; brew cleanup; brew doctor"

# NPM
alias npmg="npm i -g"
alias npms="npm ls -g -depth 0"
alias npmcheck="npm-check"
alias npmgup="npm-check -gu"

# Git
alias g="git"
alias ga="git add"
alias gco="git checkout"
alias gl="git pull"
alias gp="git push"
alias gm="git merge"
alias gs="git status"
alias gst="git stash"

# Misc
alias paths="echo $PATH | tr -s ':' '\n'"
alias starwars="nc towel.blinkenlights.nl 23"
alias myip="curl ifconfig.co"